<form class="formulario" action='/' method="POST">
  <h1 class='animate__fadeInUp'>Registro</h1>
  {{!--
  <div class="form-group">
    --}}
    <input
      type="text"
      class="form-control animate__fadeInUp"
      id="nombre"
      placeholder="NOMBRE"
      name="nombre"
      autocomplete="name"
      required
    />
    {{!--
  </div>
